# Server Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/alpha_creator_ads
MONGODB_TEST_URI=mongodb://localhost:27017/alpha_creator_ads_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=3d
JWT_REFRESH_EXPIRY=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@alphaads.com

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8083

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

